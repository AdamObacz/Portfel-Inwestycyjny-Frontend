{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist-server",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "src/App.ts",
    "src/server.ts",
    "src/db.ts",
    "src/redis.ts",
    "src/routes/**/*.ts"
  ]
}
